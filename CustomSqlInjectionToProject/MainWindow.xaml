<Window x:Class = "CustomSqlInjectionToProject.MainWindow"
        xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local = "clr-namespace:CustomSqlInjectionToProject"
        x:Name="CodeBehind" DataContext="{Binding ElementName = CodeBehind}"
        mc:Ignorable="d"

        Title = "Custom Sql Injection to Project" Height = "400" Width = "800" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width = "2*" />
            <ColumnDefinition Width = "8*" />
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Column = "0" >

            <ComboBox SelectionChanged="Selector_OnSelectionChanged" DockPanel.Dock="Top" ItemsSource="{Binding Model.Profiles,Mode=OneWay}" SelectedItem="{Binding Model.SelectedProfile,Mode=TwoWay}" ></ComboBox>

            <ListBox  DockPanel.Dock="Bottom" ItemsSource="{Binding Model.SelectedProfileCustomSqlList.CustomSqlInfoList,Mode=OneWay}" ></ListBox>

        </DockPanel>

        <DockPanel Grid.Column = "1" >

            <StackPanel Orientation = "Horizontal" DockPanel.Dock = "Top" >
                <Button Padding = "10" >Kaydet</Button>
            </StackPanel>

            <RichTextBox DockPanel.Dock = "Bottom" />

        </DockPanel>

    </Grid>
</Window>
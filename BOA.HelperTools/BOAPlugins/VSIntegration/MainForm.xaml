<Window x:Class = "BOAPlugins.VSIntegration.MainForm"
        xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation = "CenterScreen"
        Width = "450"
        Title = "Close - ESC"
        Height = "440" >
    <StackPanel>
        <Button x:Name = "buttonUpdateMessageCs" Margin = "10" Click = "UpdateMessageCs" >Update Message.cs (in type project)</Button>
        <Button  Margin = "10" Click = "RemoveUnusedMessagesInCsCodes" >Remove Unused Messages In Message.cs (in type project)</Button>
        <Button  Margin = "10" Click = "UpdateMessageTsx" >Update 'utils -> Message.tsx'</Button>
        <Button  Margin = "10" Click = "RemoveUnusedMessagesInTypescriptCodes" >Remove Unused Messages In Typescript Codes ( 'utils -> Message.tsx' )</Button>
        <Button Margin = "10" Click = "UpdateTypeScriptModels" >Update 'models -> AutoGeneratedModels.tsx'</Button>

        
        <Button x:Name = "buttonViewMethodCallGraph" Margin = "10" Click = "ViewMethodCallGraph" >View Method Call Graph</Button>
        <Button Margin = "10" Click = "OpenPluginDirectory" >Open Plugin Directory</Button>
        <StackPanel Margin = "10" >
            <TextBox Margin = "5"> Check In Comment</TextBox>
            <TextBox Margin = "5" x:Name="cmpCheckInComment" />
        </StackPanel>
        <Button Margin = "10" Click = "InitializeFormAssistantDefaultCodes" >Initialize Form Asisstant Default Codes</Button>
    </StackPanel>
</Window>
<UserControl x:Class="BOA.OneDesigner.WpfControls.BDataGridInfoWpf"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:jsxElementModel = "clr-namespace:BOA.OneDesigner.JsxElementModel"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance jsxElementModel:BDataGrid, IsDesignTimeCreatable=True}"
             MinWidth="200"
             MinHeight="70"
             
             d:DesignHeight="100" d:DesignWidth="800">
    <GroupBox Header="{Binding DataSourceBindingPath,Mode=OneWay}">
        <WrapPanel  x:Name="_columnsContainer"/>
    </GroupBox>
</UserControl>

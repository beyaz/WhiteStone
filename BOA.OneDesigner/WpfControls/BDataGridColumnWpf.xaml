<UserControl x:Class = "BOA.OneDesigner.WpfControls.BDataGridColumnWpf"
             xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
             xmlns:jsxElementModel = "clr-namespace:BOA.OneDesigner.JsxElementModel"
             mc:Ignorable = "d"
             d:DataContext = "{d:DesignInstance jsxElementModel:BDataGridColumnInfo, IsDesignTimeCreatable=True}"
             Background = "LightBlue"
             Margin = "10,0,0,0" >
    <StackPanel MinWidth = "50" MinHeight = "50" >

        <TextBlock HorizontalAlignment = "Center"
                   x:Name = "_label"
                   Text = "{Binding LabelText,Mode=OneWay}"
                   FontWeight = "Bold" Foreground = "White" />

        <TextBlock HorizontalAlignment = "Center"
                   x:Name = "_bindingPath"
                   Text = "{Binding BindingPath,Mode=OneWay}"
                   Foreground = "White" FontWeight = "Light" />
    </StackPanel>
</UserControl>
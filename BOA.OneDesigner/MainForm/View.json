{
  "Title": "BOA One Designer",
  "Width": 1100,
  "Height": 800,
  "Content": {
    "ui": "Grid",
    "rows": [
      {
        "gravity": 10,
        "ui": "StackPanel",
        "Children": [
          {
            "ui": "GroupBox",
            "Header": "Search",
            "IsVisible": "{Binding SearchIsVisible}",
            "Content": {

              "ui": "Grid",
              "Margin": 20,
              "rows": [
                {
                  "ui": "TextBox",
                  "Label": "Select Tfs Project",
                  "IntellisenseSource": "{Binding TfsFolderNames}",
                  "Text": "{Binding ScreenInfo.TfsFolderName}",
                  "vAlignIsCenter": true,
                  "hAlignIsCenter": true,
                  "MinWidth": 500,
                  "TextChanged": "this.FireAction('TfsFolderNameChanged')"


                },
                {
                  "ui": "TextBox",
                  "Label": "Select Request",
                  "IntellisenseSource": "{Binding RequestNames}",
                  "Text": "{Binding ScreenInfo.RequestName}",
                  "vAlignIsCenter": true,
                  "hAlignIsCenter": true,
                  "MinWidth": 500,
                  "TextChanged": "this.FireAction('RequestNameChanged')"

                },
                {
                  "ui": "TextBox",
                  "Label": "Form Tipi (Detay - List)",
                  "IntellisenseSource": "{Binding FormTypes}",
                  "Text": "{Binding ScreenInfo.FormType}",
                  "vAlignIsCenter": true,
                  "hAlignIsCenter": true,
                  "MinWidth": 500

                }

              ]
            }

          },
          {
            "ui": "GroupBox",
            "IsVisible": "{Binding DesignIsVisible}",
            "Header": "Design",
            "Content": {

              "ui": "Grid",
              "columns": [
                {
                  "view": "Toolbox",
                  "Margin": 5,
                  "gravity": 1
                },
                { "view": "GridSplitter" },
                {
                  "ui": "Grid",
                  "rows": [
                    {
                      "ui": "Surface",
                      "Name": "DesignSurface",
                      "Height": 700
                    }
                  ],
                  "gravity": 8
                },
                { "view": "GridSplitter" },
                {
                  "ui": "PropertyEditorContainer",
                  "gravity": 2
                }
              ]
            }
          }

        ]
      },
      {"ui": "GridSplitter"},
      {
        "ui": "StackPanel",
        "Name": "ActionPanel",
        "gravity": 1,
        "FlowDirection": "RightToLeft",
        "Orientation": "Horizontal"
      }
    ]
  }
}

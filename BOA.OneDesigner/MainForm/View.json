{
  "Title": "BOA One Designer",
  "Width": 1100,
  "Height": 800,
  "Content": {
    "ui": "TabControl",
    "Children": [
      {
        "ui": "TabItem",
        "Header": "Start",
        "IsVisible": "{Binding StartTabIsVisible}",
        "Content": {

          "ui": "StackPanel",
          "Margin": 20,
          "rows": [
            {
              "ui": "TextBox",
              "Label": "Ara",
              "IntellisenseSource": "{Binding SolutionFileNames}",
              "Text": "{Binding ScreenSearchKey}"
            },
            {
              "ui": "DatagRid",
              "AutoGenerateColumns": true,
              "ItemsSource": "{Binding WorkingOnScreenList}",
              "CanUserAddRows": false,
              "CanUserDeleteRows": false,
              "SelectionChanged": "this.FireAction('WorkingOnScreenListSelectionChanged')"
            }

          ]
        }
        
      },
      {
        "ui": "TabItem",
        "IsVisible": "{Binding ScreenInfoTabIsVisible}",
        "Header": "Ekran Bilgileri",
        "Content": {
          "ui": "StackPanel",
          "Margin": 20,
          "Children": [
            {
              "ui": "TextBox",
              "Label": "Solution file Path (Ã–rn:D:\\work\\BOA.BusinessModules\\Dev\\BOA.CardGeneral.DebitCard\\BOA.CardGeneral.DebitCard.sln)",
              "Text": "{Binding SolutionFilePath}"
            }
          ]
        }
      },
      {
        "ui": "TabItem",
        "IsVisible": "{Binding DesignTabIsVisible}",
        "Header": "Design",
        "Content": {

          "ui": "Grid",
          "columns": [
            {
              "view": "Toolbox",
              "Margin": 5,
              "gravity": 1
            },
            { "view": "GridSplitter" },
            {
              "ui": "Grid",
              "rows": [
                {
                  "ui": "Surface",
                  "Name": "DesignSurface",
                  "Height": 700
                }
              ],
              "gravity": 8
            },
            { "view": "GridSplitter" },
            {
              "ui": "PropertyEditorContainer",
              "gravity": 2
            }
          ]
        }
      }

    ]
  }
}

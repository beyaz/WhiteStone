<UserControl x:Class = "BOA.EntityGeneration.UI.Container.ConstantsProjectGeneration.Components.Container"
             xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:components = "clr-namespace:BOA.EntityGeneration.UI.Container.Components"
             x:Name="CodeBehind"
             DataContext="{Binding ElementName=CodeBehind}">

    <StackPanel>
        <Label FontWeight = "Bold" >Data Source</Label>
        <TextBox IsEnabled="False" Text= "{Binding Config.DataSourceProcedureFullName,Mode=TwoWay}" />

        <Label Margin = "0,10,0,0" FontWeight = "Bold" >Constant Project  Name</Label>
        <TextBox IsEnabled="False" Text= "{Binding Config.NamespaceName,Mode=TwoWay}" />
        <Button Margin = "0,10,0,0" Click = "OnGenerateClicked" >Generate</Button>
        <ScrollViewer VerticalScrollBarVisibility = "Auto" >
            <StackPanel Name = "processContainer" MaxHeight = "600" />
        </ScrollViewer>
    </StackPanel>


</UserControl>